<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.PlayersRankingActivity">

    <TextView
        android:id="@+id/activity_players_ranking_top1_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimary"
        android:text=""/>

    <TextView
        android:id="@+id/activity_players_ranking_top2_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimary"
        android:text=""/>

    <TextView
        android:id="@+id/activity_players_ranking_top3_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimary"
        android:text=""/>

    <TextView
        android:id="@+id/activity_players_ranking_top4_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimary"
        android:text=""/>

    <TextView
        android:id="@+id/activity_players_ranking_top5_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimary"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <Button
            android:id="@+id/activity_players_ranking_sortByScore_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort by score"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/activity_players_ranking_sortByName_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sort by name"
            android:layout_marginLeft="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>